# MongoDB Atlas Configuration
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/kutbul_zaman_mlm?retryWrites=true&w=majority
DATABASE_NAME=kutbul_zaman_mlm

# Mongoose connection (used by backup and singleton)
MONGO_URI=mongodb://localhost:27017/kutbul_zaman_mlm

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=production

# Payment Gateway Configuration
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Nodemailer Gmail (simple helper uses these)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Crypto API (for real-time rates)
CRYPTO_API_KEY=your-crypto-api-key

# System Configuration
DEMO_MODE=false
DEBUG_MODE=false

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# MLM System Configuration
DEFAULT_SPONSOR_BONUS=10
DEFAULT_CAREER_COMMISSION=5
MAX_BINARY_LEVELS=10
COMMISSION_CALCULATION_DELAY=0

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/kutbul-zaman-mlm.log

# HTTPS SSL certificate paths (optional)
SSL_KEY_PATH=/etc/ssl/private/server.key
SSL_CERT_PATH=/etc/ssl/certs/server.crt
